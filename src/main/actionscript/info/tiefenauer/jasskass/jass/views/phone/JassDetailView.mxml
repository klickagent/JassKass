<?xml version="1.0" encoding="utf-8"?>
<base:JassDetailViewBase xmlns:fx="http://ns.adobe.com/mxml/2009" 
						 xmlns:s="library://ns.adobe.com/flex/spark" 
						 xmlns:base="info.tiefenauer.jasskass.jass.views.base.*"
						 implements="info.tiefenauer.jasskass.jass.views.interfaces.IJassDetailView"
						 creationComplete="onCreationComplete(event)"
						 >
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			import info.tiefenauer.jasskass.app.util.translate;
			
			protected function onCreationComplete(event:FlexEvent):void{
				title = translate('Jass vom') + ' ' + jass.date;
			}
			
		]]>
	</fx:Script>
	
	<s:Scroller width="100%" height="100%">
		<s:VGroup width="100%" height="100%" paddingLeft="10" paddingRight="10" paddingTop="10" paddingBottom="10" >
			<s:Label width="100%" text="{translate('Team 1:')}" />
			<s:HGroup width="100%">
				<s:Label width="50%" text="{translate('Punkte:')}" />
				<s:Label width="50%" text="{jass.team1Points}" />
			</s:HGroup>

			<s:HGroup width="100%">
				<s:Label width="50%" text="{translate('Striche:')}" />
				<s:Label width="50%" text="{jass.team1Penalty}" />
			</s:HGroup>
			
			<s:Label width="50%" text="{translate('Team 2:')}" />
			<s:HGroup width="100%">
				<s:Label width="50%" text="{translate('Punkte:')}" />
				<s:Label width="50%" text="{jass.team2Points}" />
			</s:HGroup>
			
			<s:HGroup width="100%">
				<s:Label width="50%" text="{translate('Striche:')}" />
				<s:Label width="50%" text="{jass.team2Penalty}" />
			</s:HGroup>
			
		</s:VGroup>
	</s:Scroller>
	
</base:JassDetailViewBase>
