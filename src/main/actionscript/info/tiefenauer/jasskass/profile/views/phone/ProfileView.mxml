<?xml version="1.0" encoding="utf-8"?>
<base:ProfileViewBase xmlns:fx="http://ns.adobe.com/mxml/2009" 
					  xmlns:s="library://ns.adobe.com/flex/spark" 
					  xmlns:base="info.tiefenauer.jasskass.profile.views.base.*"
					  implements="info.tiefenauer.jasskass.profile.views.interfaces.IProfileView"
					  >
	<fx:Script>
		<![CDATA[
			import info.tiefenauer.jasskass.app.util.translate;
			
			protected function onNewTeamButtonClick(event:MouseEvent):void{
				dispatchEvent(new Event(NEW_TEAM_BUTTON_CLICKED));
			}
			
		]]>
	</fx:Script>
	
	<base:layout>
		<s:VerticalLayout paddingLeft="10" paddingRight="20" paddingTop="10" paddingBottom="10"/>
	</base:layout>
	
	<s:Button id="newTeamButton" 
			  label="{translate('Neues Team')}"
			  click="onNewTeamButtonClick(event)"
			  width="100%"
			  />
	
</base:ProfileViewBase>
