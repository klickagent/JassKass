<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:components="info.tiefenauer.jasskass.jass.views.components.*"
		>
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("info.tiefenauer.jasskass.jass.views.components.JassTafel")]
	</fx:Metadata>
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
	</s:states>
	
	<!-- SkinParts
	name=contentGroup, type=spark.components.Group, required=false
	name=team2LabelDisplay, type=spark.core.IDisplayText, required=true
	name=team1LabelDisplay, type=spark.core.IDisplayText, required=true
	-->

	<!-- background -->
	<s:Rect id="background" width="100%" height="100%">
		<s:fill>
			<s:LinearGradient>
				<s:GradientEntry color="0x316541" />
				<s:GradientEntry color="0x204325" />
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	
	<s:Path>
		
	</s:Path>
	
	<!-- Z with team labels-->
	<s:VGroup width="100%" height="100%">
		<components:ZGroup id="team1Area" width="100%" height="50%" />
		
		<s:VGroup width="100%" id="middleArea">
			
			<s:Label id="team1LabelDisplay" width="100%" rotation="180" />
			<s:Line width="100%" verticalCenter="0">
				<s:stroke>
					<s:SolidColorStroke color="#FFFFFF" weight="2" />
				</s:stroke>
			</s:Line>
			<s:Label id="team2LabelDisplay" width="100%"/>
		</s:VGroup>
		
		<components:ZGroup id="team2Area" width="100%" height="50%" />
	</s:VGroup>

	<s:Group id="contentGroup">
		<s:layout>
			<s:VerticalLayout />
		</s:layout>
	</s:Group>
</s:Skin>
